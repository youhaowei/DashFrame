{
  "name": "@dashframe/core",
  "version": "0.1.0",
  "private": true,
  "description": "Core types and abstractions for DashFrame",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc -w -p tsconfig.json --preserveWatchOutput",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@dashframe/types": "workspace:*",
    "@dashframe/core-dexie": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.6.0"
  }
}
