{
  "name": "@dashframe/visualization",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Pluggable visualization rendering system for DashFrame",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "tsc -w -p tsconfig.json --preserveWatchOutput",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests",
    "typecheck": "tsc --noEmit -p tsconfig.json"
  },
  "dependencies": {
    "@dashframe/core": "workspace:*",
    "@dashframe/types": "workspace:*",
    "@dashframe/ui": "workspace:*",
    "@duckdb/duckdb-wasm": "1.32.0",
    "@uwdata/vgplot": "^0.21.1",
    "react": "^19.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.12"
  }
}
