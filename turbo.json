{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NEXT_PUBLIC_CONVEX_URL",
    "NEXT_PUBLIC_CONVEX_DEPLOYMENT",
    "CONVEX_DEPLOYMENT",
    "CONVEX_DEPLOY_KEY"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "env": [
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CONVEX_DEPLOYMENT",
        "CONVEX_DEPLOY_KEY"
      ],
      "passThroughEnv": [
        "NEXT_PUBLIC_CONVEX_URL",
        "NEXT_PUBLIC_CONVEX_DEPLOYMENT",
        "CONVEX_DEPLOYMENT",
        "CONVEX_DEPLOY_KEY"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "format": {
      "dependsOn": ["^format"],
      "outputs": []
    },
    "lint": {},
    "test": {},
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "check": {
      "dependsOn": ["lint", "typecheck", "format"],
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}
