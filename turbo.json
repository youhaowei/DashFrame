{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false
    },
    "format": {
      "dependsOn": [
        "^format"
      ],
      "outputs": []
    },
    "lint": {},
    "test": {},
    "typecheck": {
      "dependsOn": [
        "^typecheck"
      ]
    },
    "check": {
      "dependsOn": [
        "lint",
        "typecheck",
        "format"
      ],
      "outputs": []
    }
  }
}
