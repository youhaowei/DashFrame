{
  "name": "dashframe",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "e2e/*"
  ],
  "overrides": {
    "@duckdb/duckdb-wasm": "1.32.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write --loglevel=error"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:write": "prettier --write .",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:e2e:ci": "turbo test:e2e:ci",
    "test:e2e:ui": "bun run --filter @dashframe/web-e2e test:ui",
    "typecheck": "turbo typecheck",
    "check": "turbo check",
    "clean": "turbo clean",
    "storybook": "turbo storybook",
    "build-storybook": "turbo build-storybook",
    "prepare": "husky",
    "changeset": "changeset",
    "changeset:ai": "node scripts/ai-changeset.mjs",
    "changeset:status": "changeset status",
    "version": "changeset version && node scripts/annotate-web-changelog.mjs",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@dashframe/eslint-config": "workspace:*",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.39.0",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.10",
    "shadcn": "^3.6.1",
    "turbo": "^2.7.2",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "convex": "^1.29.3"
  }
}
