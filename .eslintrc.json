{
  "root": true,
  "extends": ["next", "turbo", "prettier"],
  "plugins": ["tailwindcss"],
  "parserOptions": {
    "project": "./tsconfig.base.json"
  },
  "rules": {
    "tailwindcss/classnames-order": "warn",
    "tailwindcss/enforces-negative-arbitrary-values": "off",
    "tailwindcss/migration-from-tailwind-2": "off"
  }
}
